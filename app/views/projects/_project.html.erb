<div class="container-fluid justify-content-center pt-10 pr-5">
    <div class="row justify-content-center">
    <div class="col-7">
        <div class="fs-1 text-wrap">
            <%= project.title %>
        </div>
        <hr>
        <div class="fs-2 text">
            <% project.people.each do |person| %>
                <%= render "projects/person", person: person %>
                <br>
            <% end %>
        </div>
        <hr>
        <div class="fs-3 text">
            <%= project.abstract %>
        </div>
    </div>
    <div class="col-3">
        <div class="video-container">
        <iframe src=<%= project.video_link %> width=650px height=500px allowfullscreen>
        </iframe>
        </div>
    </div>
    </div>
</div>


